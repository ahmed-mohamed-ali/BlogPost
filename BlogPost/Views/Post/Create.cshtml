@model Post
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group">
        <label asp-for="PublisherName" class="col-form-label"></label>
        <input asp-for="PublisherName" class="form-control" />
        <span asp-validation-for="PublisherName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PostContent" class="col-form-label"></label>
        <textarea asp-for="PostContent" class="form-control" rows="10"></textarea>

        <span asp-validation-for="PostContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}